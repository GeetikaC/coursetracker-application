<div id="error">
  
</div>

<%= form_for(course, remote: true, id: "new_course") do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :course_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :instructor_id %>
    <%= form.collection_select :instructor_id, Instructor.all, :id, :name, {prompt: "Select Instructor"}, {class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit "Create", class: "btn btn-primary" %>or
    <a href="#" id="reset" class="btn btn-outline-primary">Reset</a>
  </div>
<% end %>


<script type="text/javascript">
  var formHandle = document.getElementById('new_course');
  var resetHandle = document.getElementById('reset');

  resetHandle.addEventListener('click', function(e){
    e.preventDefault();
    formHandle.reset();
  }, false);
</script>